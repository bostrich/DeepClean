<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_item_title"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="聊天文件"/>
            
            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_down"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_talking_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 聊天视频-->
        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_wx_video"
                />

            <ImageView
                android:id="@+id/img_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_icon"
                android:layout_toLeftOf="@id/img_arrow_right"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_video_name"
                    android:textColor="#010101"
                    android:textSize="14sp"
                    android:text="聊天小视频"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_apk_state"
                    android:textColor="#929292"
                    android:textSize="14sp"
                    android:text="点击管理小视频"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 聊天图片-->
        <RelativeLayout
            android:id="@+id/rl_talking_imgs"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/img_talking"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_wx_talking_img"
                />

            <ImageView
                android:id="@+id/img_arrow_talking"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_talking"
                android:layout_toLeftOf="@id/img_arrow_talking"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#010101"
                    android:textSize="14sp"
                    android:text="聊天图片"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#929292"
                    android:textSize="14sp"
                    android:text="点击管理图片"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 聊天语音-->
        <RelativeLayout
            android:id="@+id/rl_talking_sound"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/img_talking_sound"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_wx_talking_sound"
                />

            <ImageView
                android:id="@+id/img_arrow_talking_sound"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_talking_sound"
                android:layout_toLeftOf="@id/img_arrow_talking_sound"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#010101"
                    android:textSize="14sp"
                    android:text="聊天语音"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#929292"
                    android:textSize="14sp"
                    android:text="点击管理语音"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 接收文件-->
        <RelativeLayout
            android:id="@+id/rl_receive"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/img_receive"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_wx_recevier"
                />

            <ImageView
                android:id="@+id/img_arrow_receive"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_right"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_receive"
                android:layout_toLeftOf="@id/img_arrow_receive"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#010101"
                    android:textSize="14sp"
                    android:text="接收文件"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#929292"
                    android:textSize="14sp"
                    android:text="管理接收文件"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>